<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<AnchorPane fx:id="anchorPane" minWidth="500.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="view.login.LoginController">
    <children>
        <VBox minWidth="500.0">
            <children>
                <MenuBar>
                    <menus>
                        <Menu mnemonicParsing="false" text="File">
                            <items>
                                <MenuItem mnemonicParsing="false" text="Close"/>
                            </items>
                        </Menu>
                        <Menu mnemonicParsing="false" text="Edit">
                            <items>
                                <MenuItem mnemonicParsing="false" text="Delete"/>
                            </items>
                        </Menu>
                        <Menu mnemonicParsing="false" text="Help">
                            <items>
                                <MenuItem mnemonicParsing="false" text="About"/>
                            </items>
                        </Menu>
                    </menus>
                </MenuBar>
                <VBox alignment="CENTER" spacing="20.0">
                    <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                    </padding>
                    <children>
                        <VBox alignment="CENTER">
                            <children>
                                <Label text="TikzOverflow" underline="true" BorderPane.alignment="CENTER">
                                    <BorderPane.margin>
                                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                                    </BorderPane.margin>
                                    <font>
                                        <Font name="System Bold" size="18.0"/>
                                    </font>
                                </Label>
                            </children>
                        </VBox>
                        <VBox>
                            <children>
                                <VBox spacing="10.0">
                                    <VBox.margin>
                                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                                    </VBox.margin>
                                    <children>
                                        <Label text="User email address"/>
                                        <TextField fx:id="usernameTF"/>
                                    </children>
                                </VBox>
                                <VBox spacing="10.0">
                                    <VBox.margin>
                                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                                    </VBox.margin>
                                    <children>
                                        <Label text="Password"/>
                                        <PasswordField fx:id="passwordTF"/>
                                    </children>
                                </VBox>
                            </children>
                        </VBox>
                        <HBox alignment="TOP_RIGHT" spacing="10.0">
                            <children>
                                <Button fx:id="buttonCreateAccount" mnemonicParsing="false"
                                        onAction="#handleCreateAccountButton" text="Create account"/>
                                <Button fx:id="buttonLogin" mnemonicParsing="false" onAction="#handleLoginButton"
                                        text="Login"/>
                            </children>
                            <VBox.margin>
                                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                            </VBox.margin>
                        </HBox>
                    </children>
                </VBox>
            </children>
        </VBox>
    </children>
</AnchorPane>
